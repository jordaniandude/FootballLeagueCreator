<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/messi"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_current_champ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_champ"
            android:drawableRight="@drawable/ic_launcher"
            android:background="#33000000"
            android:textColor="@color/color_edit_2"
            android:gravity="center"
            android:textSize="@dimen/text_size_2"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lst_current_champ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_new_championship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/plus1"
            android:gravity="center"
            android:onClick="createChampionship"
            android:text="@string/create_champ"
            android:textSize="@dimen/text_size_2"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>